<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Observation</h1>
  <div class="col-6 offset-3">
    <form
      action="/observations/<%= observation._id %>?_method=PATCH"
      method="POST"
    >
      <div class="mb-3">
        <label class="form-label" for="user">User</label>
        <input
          class="form-control"
          type="text"
          id="user"
          name="observation[user]"
          required
          value="<%= observation.user %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="observation[location]"
          required
          value="<%= observation.location %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="feelsLike">Feels Like</label>
        <input
          class="form-control"
          type="text"
          id="feelsLike"
          name="observation[feelsLike]"
          required
          value="<%= observation.feelsLike %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="feelsLike">Photo URL</label>
        <input
          class="form-control"
          type="text"
          id="photo"
          name="observation[photo]"
          required
          value="<%= observation.photo%>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="feelsLike">Observation</label>
        <textarea
          class="form-control"
          type="text"
          id="content"
          name="observation[content]"
          required
        >
        <%= observation.content%>
        </textarea>
      </div>
      <button class="btn btn-info">Update</button>
    </form>
    <a href="/observations/<%= observation._id %>">Cancel</a>
  </div>
</div>
