<% layout('layouts/boilerplate') %>
<h1>Observations Page</h1>
<div>
  <a class="btn btn-success mb-3" href="/observations/new">New Observation</a>
</div>
<% for (let obs of observations) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%= obs.photo %>" alt="" />
    </div>
    <div class="col-mg-8">
      <div class="card-body">
        <h5 class="card-title"><%= obs.content %></h5>
        <p class="card-text"><%= obs.user %> is feeling <%= obs.feelsLike %></p>
        <p class="card-text">
          <small class="text-muted"><%= obs.location %></small>
        </p>
        <a class="btn btn-primary" href="/observations/<%= obs._id %>">
          View Observation
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>
